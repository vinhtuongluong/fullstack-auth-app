    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nest Debug",
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug",
                "--",
                "--inspect-brk"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "auto",
            "port": 9229,
            "autoAttachChildProcesses": true
        },
        {
            "name": "Next Debug",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://localhost:\\d+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "autoAttachChildProcesses": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack (Nest + Next)",
            "configurations": [
                "Nest Debug",
                "Next Debug"
            ]
        }
    ]
}